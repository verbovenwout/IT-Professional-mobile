{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    },
        "baseUrl": "." 
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
    ".expo/types/**/*.ts", 
    "expo-env.d.ts",
    "types/**/*",
    "services/**/*",
    "hooks/**/*"
  ],
    "exclude": [
    "node_modules"
  ]
}
